<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:background="@color/app_background_dark"
    android:layout_width="match_parent"
    android:layout_height="50.5dp">

    <ImageView
        android:id="@+id/iv_light_mode_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_sd_card_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_light_mode_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/light_flash"
        android:textSize="@dimen/text_15sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_light_mode_left"
        android:drawableEnd="@drawable/ic_chose_selector"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>