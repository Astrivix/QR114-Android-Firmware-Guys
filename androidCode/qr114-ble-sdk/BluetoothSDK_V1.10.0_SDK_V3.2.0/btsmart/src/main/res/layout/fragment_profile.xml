<!--
  REWRITTEN FOR COMPATIBILITY:
  1.  All <com.google.android.material.textfield.TextInputLayout> elements have been REMOVED to prevent crashes on older development environments.
  2.  Each input field has been REPLACED with the stable pattern from your SignUpFragment:
      - A <ConstraintLayout> that acts as the bordered container.
      - An <ImageView> for the icon.
      - An <EditText> for the text input.
      - An <ImageView> for the password toggle.
  3.  This structure avoids the Material Components that were causing the issue.
  4.  The overall ScrollView -> ConstraintLayout -> CardView structure is maintained for a consistent look.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true"
    tools:context=".ui.home.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Add this ProgressBar for loading feedback -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBarProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!-- Header: Title and Settings Icon (Unchanged) -->

            <TextView
                android:id="@+id/profileTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                android:src="@drawable/ic_settings_white"
                app:layout_constraintBottom_toBottomOf="@id/profileTitleTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileTitleTextView"
                app:tint="@android:color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- User Information Card (Unchanged) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/reciter_item_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarProfile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">
                <!-- Content here is fine -->
                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/profile_icon_background"
                    android:padding="18dp"
                    android:src="@drawable/ic_profile_avatar"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="user.email@example.com" />

                <TextView
                    android:id="@+id/serialNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    tools:text="SN: 58:F2:DC:D0:22:A8" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- MODIFIED: Password Reset Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/passwordCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/reciter_item_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:animateLayoutChanges="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileInfoCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- MODIFIED: This is now the clickable header for the collapsible section -->
                <TextView
                    android:id="@+id/changePasswordHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:paddingBottom="8dp"
                    android:text="@string/change_password"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableTint="@android:color/white" />

                <!-- ADDED: This new LinearLayout contains the collapsible content -->
                <LinearLayout
                    android:id="@+id/collapsiblePasswordSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!-- REPLACED: Current Password Input -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/currentPasswordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edittext_background_selector"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:id="@+id/currentPasswordIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:duplicateParentState="true"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/icon_tint_selector" />

                        <EditText
                            android:id="@+id/currentPasswordEditText"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="12dp"
                            android:background="@null"
                            android:hint="@string/current_password"
                            android:inputType="textPassword"
                            android:textColor="@color/text_primary_light"
                            android:textColorHint="@color/text_secondary_light"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/currentPasswordToggle"
                            app:layout_constraintStart_toEndOf="@id/currentPasswordIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/currentPasswordToggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/text_secondary_light" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- REPLACED: New Password Input -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/newPasswordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edittext_background_selector"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:id="@+id/newPasswordIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:duplicateParentState="true"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/icon_tint_selector" />

                        <EditText
                            android:id="@+id/newPasswordEditText"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="12dp"
                            android:background="@null"
                            android:hint="@string/new_password"
                            android:inputType="textPassword"
                            android:textColor="@color/text_primary_light"
                            android:textColorHint="@color/text_secondary_light"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/newPasswordToggle"
                            app:layout_constraintStart_toEndOf="@id/newPasswordIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/newPasswordToggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/text_secondary_light" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- REPLACED: Confirm Password Input -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/confirmPasswordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edittext_background_selector"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:id="@+id/confirmPasswordIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:duplicateParentState="true"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/icon_tint_selector" />

                        <EditText
                            android:id="@+id/confirmPasswordEditText"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="12dp"
                            android:background="@null"
                            android:hint="@string/confirm_new_password"
                            android:inputType="textPassword"
                            android:textColor="@color/text_primary_light"
                            android:textColorHint="@color/text_secondary_light"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/confirmPasswordToggle"
                            app:layout_constraintStart_toEndOf="@id/confirmPasswordIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/confirmPasswordToggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/text_secondary_light" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/updatePasswordButton"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_background"
                        android:text="@string/update_password"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout> <!-- End of collapsible section -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button at the bottom (Redundant spacer View was removed) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/red_btn_bg"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordCard"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>